# Docker Development Environment Variables
# Copy this file to .env.docker and fill in your actual values

# Database (PostgreSQL in Docker)
DATABASE_URL=postgresql://docuflow:docuflow_dev_password@postgres:5432/docuflow
DB_HOST=postgres
DB_PORT=5432
DB_USER=docuflow
DB_PASSWORD=docuflow_dev_password
DB_NAME=docuflow

# Redis (in Docker)
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# API
API_HOST=0.0.0.0
API_PORT=8000
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Security
SECRET_KEY=change-this-to-random-32-char-string-in-production
ENCRYPTION_KEY=generate-your-own-fernet-key-here

# API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# AI Model Selection
CLAUDE_MODEL=claude-haiku-4-5

# OCR Settings
USE_GOOGLE_VISION=false
GOOGLE_APPLICATION_CREDENTIALS=

# Google Drive OAuth (get from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/connectors/google-drive/oauth-callback

# Auth0 Authentication (get from Auth0 Dashboard)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://docuflow-api

# File Upload
UPLOAD_DIR=/app/storage/uploads
PROCESSED_DIR=/app/storage/processed
MAX_FILE_SIZE=52428800

# Logging
LOG_LEVEL=INFO
